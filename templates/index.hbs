{{> header}}

{{#each blog}}
  <div class="blog-post">
    <h2 class="blog-post-title"><a href="{{ path }}">{{ title }}</a></h2>
    {{> post_header}}

    {{#if less}}

      {{{ less }}}

      <ul class="pager">
        <li><a href="/{{ path }}">Read More</a></li>
      </ul>

    {{else}}

      {{{ contents }}}

    {{/if}}

  </div>
{{/each}}

{{> footer}}
