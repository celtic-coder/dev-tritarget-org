{{#if categories}}
<p class="pull-right blog-post-meta">
  {{#each categories}}
  <a href="/categories/{{ this }}">#{{ this }}</a>
  {{/each}}
<p>
{{/if}}

<p class="blog-post-meta">
  {{> post_metadata}}
</p>
