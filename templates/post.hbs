{{> header}}

<div class="blog-post">
  {{> post_header}}

  {{{ contents }}}

  <div class="pager">
    {{#if previous}}<li class="previous"><a class="normal" href="/{{ previous.path }}"><i class="fa fa-chevron-left"></i> Previous</a></li>{{/if}}
    {{#if next}}<li class="next"><a class="normal" href="/{{ next.path }}">Next <i class="fa fa-chevron-right"></i></a></li>{{/if}}
  </div>

  {{#not-eq comments false}}
  <div id="disqus_thread"></div>
  {{/not-eq}}

</div>

{{> footer}}
